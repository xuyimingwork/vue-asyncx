{
  "name": "vue-asyncx",
  "version": "1.10.1",
  "description": "让异步像写诗的 Vue 3 组合式工具库",
  "type": "module",
  "types": "dist/vue-asyncx.d.ts",
  "files": [
    "dist"
  ],
  "main": "./dist/vue-asyncx.umd.cjs",
  "module": "./dist/vue-asyncx.js",
  "exports": {
    ".": {
      "types": "./dist/vue-asyncx.d.ts",
      "import": "./dist/vue-asyncx.js",
      "require": "./dist/vue-asyncx.umd.cjs"
    },
    "./vue2": {
      "types": "./dist/vue2/vue-asyncx.d.ts",
      "import": "./dist/vue2/vue-asyncx.js",
      "require": "./dist/vue2/vue-asyncx.umd.cjs"
    }
  },
  "scripts": {
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "test:unit": "pnpm run test:unit:vue3 && pnpm run test:unit:vue2",
    "test:unit:coverage": "vue-demi-switch 3 && vitest run --coverage",
    "test:unit:watch": "vue-demi-switch 3 && vitest",
    "test:unit:vue3": "vue-demi-switch 3 && vitest run",
    "test:unit:vue2": "vue-demi-switch 2.7 vue2 && vitest run --mode vue2",
    "build": "pnpm run build:vue3 && pnpm run build:vue2",
    "build:vue3": "vite build",
    "build:vue2": "vite build --mode vue2",
    "prepublish": "pnpm run build",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "test:e2e": "vitest run -c vitest.e2e.config.ts",
    "test:e2e:watch": "vitest -c vitest.e2e.config.ts",
    "test:all": "pnpm run build && pnpm run test:unit && pnpm run test:e2e"
  },
  "keywords": [
    "vue",
    "utils",
    "async",
    "vueuse",
    "hooks",
    "ahooks"
  ],
  "author": "Xu Yiming",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xuyimingwork/vue-asyncx.git"
  },
  "homepage": "https://vue-asyncx.js.org/",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@types/node": "^22.19.1",
    "@vitest/coverage-v8": "^4.0.14",
    "@vueuse/core": "^14.0.0",
    "es-toolkit": "^1.42.0",
    "jsdom": "^24.1.1",
    "oxlint": "^1.0.0",
    "rolldown-plugin-dts": "^0.21.8",
    "typescript": "5.9.3",
    "vite": "8.0.0-beta.15",
    "vite-plugin-dts": "^4.5.4",
    "vitepress": "^1.6.3",
    "vitest": "^4.0.14",
    "vue": "^3.0.0",
    "vue2": "npm:vue@2",
    "vue-demi": "^0.14.10"
  },
  "peerDependencies": {
    "vue": "^2.7.0 || >=3.0.0"
  }
}